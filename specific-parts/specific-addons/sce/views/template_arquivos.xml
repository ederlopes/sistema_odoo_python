<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="template_arquivos_view_tree" model="ir.ui.view">
        <field name="name">template_arquivos.view.tree</field>
        <field name="model">template.arquivo</field>
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="disclaimer" />
                <field name="nome_arquivo" />
                <field name="tipo_arquivo" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <record id="template_arquivos_view_form" model="ir.ui.view">
        <field name="name">template_arquivos.view.form</field>
        <field name="model">template.arquivo</field>
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="tipo_arquivo" />
                        <field name="name" />
                        <field name="arquivo" filename="nome_arquivo"/>
                        <field name="nome_arquivo" invisible="1"/>
                        <field name="active"  />
                    </group>
                    <group>
                        <field name="disclaimer" />
                    </group>
                </sheet>
            </form>
        </field>

    </record>

    <record model="ir.actions.act_window" id="template_arquivos_action">
       <field name="name">Template de Arquivos</field>
       <field name="res_model">template.arquivo</field>
       <field name="view_mode">tree,form</field>
       <field name="view_id" ref="template_arquivos_view_tree"/>
       <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('template_arquivos_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('template_arquivos_view_form')})
       ]"/>
   </record>



</odoo>
